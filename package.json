    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.11.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@faker-js/faker": "^9.3.0",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.10.1",
    "nodemon": "^3.1.7",
    "prisma": "^6.5.0",
    "ts-node": "^10.9.2",
